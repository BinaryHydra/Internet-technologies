{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "paskaitosVieta": {
            "type": "object",
            "properties": {
                "gatvė": { "enum": ["Naugarduko", "Didlaukio"] },
                "auditorija": { 
                    "type": "string",
                    "pattern": "^\\d+[a-zA-Z]?$" 
                }
            },
            "required": [
                "gatvė",
                "auditorija"
            ],
            "additionalProperties": false
        },
        "užduotysObject": {
            "type":"object",
            "properties": {
                "užduotys":{ "$ref": "#/definitions/užduotys"}
            }
        },
        
        "užduotys": {
            "type": "array",
            "items": { "$ref": "#/definitions/užduotis" },
            "additionalProperties": false
        },
        "užduotis": {
            "type": "object",
            "properties": {
                "numeris": { "type": "integer", "minimum": 1},
                "deadline": { "type": "string", "format": "date"},
                "temos": {
                    "type": "array",
                    "items": { "type": "string", "maxLength": 120 }
                },
                "įvertis": { "type": "number", "exclusiveMinimum": 0}
            },
            "required": [
                "numeris",
                "deadline",
                "temos",
                "įvertis"
            ]
         },
        "teorija": {
            "type": "object",
            "properties": {
                "paskaitosVieta": { "$ref": "#/definitions/paskaitosVieta" }
            },
            "required": [
                "paskaitosVieta"
            ]
        },
        "pratybos": {
            "allOf": [
                {"$ref": "#/definitions/teorija"},
                { "properties": {
                     "užduotys": {"$ref": "#/definitions/užduotys"}
                    },
                    "required": ["užduotys"]
                }
            ]
        },
        "paskaitos": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "pavadinimas": {"type": "string"},
                    "teorija": {"$ref": "#/definitions/teorija"},
                    "pratybos": { "$ref": "#/definitions/pratybos" }
                },
                "required": [
                    "pavadinimas",
                    "teorija",
                    "pratybos"
                ],
                "additionalProperties": false
            }
        }
    },
    "type": "object",
    "properties": {
        "tvarkaraštis": {
            "type": "object",
            "properties": {
                "paskaitos": { "$ref": "#/definitions/paskaitos" }
            },
            "required": [
                "paskaitos"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "tvarkaraštis"
    ],
    "additionalProperties": false
}